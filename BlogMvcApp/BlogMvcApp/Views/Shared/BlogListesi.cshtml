@model IEnumerable<BlogMvcApp.Models.BlogModel>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Kayıt Bulunamadı...</h3>
    </div>
}
else
{
    <div class="alert alert-success">
        <h3><b>@Model.Count()</b> Kayıt Listelendi..</h3>
    </div>
    foreach (var blog in Model)
    {

        <div class="blog">
            <h3 class="page-header">
                @blog.Baslik
            </h3>
            <p>
                <span class="glyphicon glyphicon-time ">
                    @blog.EklenmeTarihi
                </span>
            </p>
            <hr />
            <img class="img-responsive" src="http://placehold.it/900x300" alt="" />
            <hr />
            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha Fazla...", "Details", "Blog", new { id = blog.Id }, new { @class = "btn btn-primary" })
        </div>
    }

}


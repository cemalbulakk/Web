@using UrunKatalog.Models;
@model IEnumerable<UrunKatalog.Models.ProductModel>
<div class="row pb-5">
    @foreach (var urun in Model)
    {
        <div class="col-md-4 pb-5">
            <div class="card">
                <img src="/Upload/@urun.Image" class="card-img-top image" alt="@urun.Name">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Home/Details/@urun.Id">@urun.Name</a>
                    </h5>
                    <p class="card-text pt-2 description">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price fa fa-turkish-lira">
                        @urun.Price
                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-info btn-sm float-right">Ürünü İncele <i class="fa fa-chevron-circle-right"></i></a>
                </div>
            </div>
        </div>
    }



</div>
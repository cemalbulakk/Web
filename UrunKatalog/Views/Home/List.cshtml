@using UrunKatalog.Models;
@model IEnumerable<UrunKatalog.Models.ProductModel>
    @{
        ViewBag.Title = "List";
    }
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3">
                @Html.Action("GetCategories","Home")
            </div>
            <div class="col-md-9">
                @if (Model.Count() == 0)
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="fa fa-exclamation-circle"></i> Bu kategoride bir ürün bulunamadı. 
                    </div>
                }
                else
                {
                    <div class="alert alert-success" role="alert">
                        <i class="fa fa-check-circle"></i> @Model.Count() adet ürün bulundu.
                    </div>
                }

                @Html.Partial("_ProductList", Model)
            </div>
        </div>
    </div>

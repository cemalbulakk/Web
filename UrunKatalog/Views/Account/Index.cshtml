@using UrunKatalog.Entity
@model IEnumerable<UrunKatalog.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <hr />
            <table class="table table-bordered table-striped">
                <thead>
                    <tr class="text-center">
                        <th>Order Number</th>
                        <th>Order Date</th>
                        <th>Total</th>
                        <th>Order State</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td>@item.Total</td>
                            <td>
                                @if (item.OrderState == EnumOrderState.Waiting)
                                {
                                    <span class="badge-danger">@item.OrderState</span>
                                }
                                else
                                {
                                    <span class="badge-success">@item.OrderState</span>
                                }
                            </td>
                            <td style="width: 30px;">
                                @Html.ActionLink("Details","Details",new {id = item.Id},new {@class = "btn btn-dark"})
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>